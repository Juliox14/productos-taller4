{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Usar módulos de ES
    "moduleResolution": "node", // Resolución de módulos de Node.js
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}